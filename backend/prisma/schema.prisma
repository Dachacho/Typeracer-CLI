generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Participant {
  id       Int    @id @default(autoincrement())
  username String
  roomId   Int
  room     Room   @relation(fields: [roomId], references: [id])
}

model Text {
  id      Int    @id @default(autoincrement())
  content String
  rooms   Room[]
}

model Room {
  id        Int      @id @default(autoincrement())
  textId    Int
  status    String
  createdAt DateTime @default(now())
  results   Result[]
  text      Text     @relation(fields: [textId], references: [id])
  participants Participant[] 
}

model Result {
  id        Int      @id @default(autoincrement())
  username  String
  textId    Int
  roomId    Int? // New: link to Room
  wpm       Float
  accuracy  Float
  timeTaken Float
  createdAt DateTime @default(now())
  room      Room?    @relation(fields: [roomId], references: [id])
}
