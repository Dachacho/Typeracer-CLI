generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Text{
  id Int @id @default(autoincrement())
  content String
}

model Result{
  id Int @id @default(autoincrement())
  username String 
  textId Int 
  wpm Float 
  accuracy Float
  timeTaken Float 
  createdAt DateTime @default(now())
}
